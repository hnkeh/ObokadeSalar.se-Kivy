#:kivy 1.0

<Controller>:

    btn_1_r: btn_r
    lbl_1_c: lbl_c
    sp_1_l: sp_l

    FloatLayout:
        canvas.before:
            Rectangle:
                pos: self.pos
                size: self.size
                source: 'bg.jpg'

        AnchorLayout:
            anchor_x: 'left'
            anchor_y: 'bottom'

            Spinner:
                id: sp_l
                text: 'Välj hus'
                values: ('Novahuset', 'Långhuset', 'Teknikhuset', 'Forumhuset', 'Prismahuset P103-P219', 'Prismahuset P220-P276', 'Prismahuset Grupprum', 'Gymnastikhuset', 'Bilbergskahuset', 'CampusUSÖ', 'Musikskolan', 'Biblioteks grupprum')
                size_hint: (0.5, 0.1)
                pos_hint: {'x':0.2, 'y':0.2}

        AnchorLayout:
            anchor_x: 'right'
            anchor_y: 'bottom'

            Button:
                id: btn_r
                text: 'Ok'
                on_press: root.do_action()
                size_hint: (0.5, 0.1)
                pos_hint: {'x':0.2, 'y':0.2}
                background_color: (1, 1, 1, 1)

        AnchorLayout:
            Label:
                id: lbl_c
                bcolor: (1, 1, 1, 1)
                canvas.before:
                    Color:
                        rgba: (1, 1, 1, 1)
                    Rectangle:
                        pos: self.pos
                        size: self.size

                size_hint: (0.8, 0.7)
                pos_hint: {'x':0.2, 'y':0.2}
                bold: True
                color: (0, 0, 0, 1)
                text_size: self.size
                halign: 'center'
                valign: 'middle'
                text: ""

<PopupBox>:
    pop_up_text: _pop_up_text
    size_hint: .5, .5
    auto_dismiss: True
    title: 'Laddar...'

    BoxLayout:
        orientation: "vertical"
        Label:
            id: _pop_up_text
            text: ''
